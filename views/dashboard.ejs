			container.innerHTML = '';
			statusDiv.style.display = 'none';
			
			// Check if topic is selected first
			const topicSelect = document.getElementById('topicSelect');
			if (!selectedTopic && !topicSelect.value) {
				showTopicRequiredMessage('Topic Association');
